<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.techinfo.video1">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_margin="10dp">
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="5dp"
                   android:scaleType="fitXY"
                   android:src="@drawable/video1_1"/>
               <Button
                   android:id="@+id/video1_1"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="3"
                   android:background="#c4302b"
                   android:textColor="#fff"
                   android:layout_margin="5dp"
                   android:text="Artificial Intelligence and the future | André LeBlanc | TEDxMoncton"
                   />
           </LinearLayout>
           <View
               android:layout_width="200dp"
               android:layout_height="2dp"
               android:background="#808080"
               android:layout_gravity="center"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_margin="10dp">
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:scaleType="fitXY"
                   android:layout_margin="5dp"
                   android:src="@drawable/video1_2"/>
               <Button
                   android:id="@+id/video1_2"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="3"
                   android:background="#c4302b"
                   android:textColor="#fff"
                   android:layout_margin="5dp"
                   android:text="Tanmay bakshi explaining the IBM artificial intelligence"/>
           </LinearLayout>
           <View
               android:layout_width="200dp"
               android:layout_height="2dp"
               android:background="#808080"
               android:layout_gravity="center"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_margin="10dp">
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:src="@drawable/video1_3"
                   android:scaleType="fitXY"
                   android:layout_margin="5dp"/>

               <Button
                   android:id="@+id/video1_3"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="3"
                   android:background="#c4302b"
                   android:textColor="#fff"
                   android:layout_margin="5dp"
                   android:text="How Will Artificial Intelligence Affect Your Life | Jeff Dean | TEDxLA"/>
           </LinearLayout>
           <View
               android:layout_width="200dp"
               android:layout_height="2dp"
               android:background="#808080"
               android:layout_gravity="center"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_margin="10dp">
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:src="@drawable/video1_4"
                   android:scaleType="fitXY"
                   android:layout_margin="5dp"/>
               <Button
                   android:id="@+id/video1_4"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="3"
                   android:background="#c4302b"
                   android:textColor="#fff"
                   android:layout_margin="5dp"
                   android:text="Artificial intelligence: dream or nightmare? | Stefan Wess | TEDxZurich"/>
           </LinearLayout>
           <View
               android:layout_width="200dp"
               android:layout_height="2dp"
               android:background="#808080"
               android:layout_gravity="center"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_margin="10dp">
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:src="@drawable/video1_5"
                   android:scaleType="fitXY"
                   android:layout_margin="5dp"/>
               <Button
                   android:id="@+id/video1_5"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="3"
                   android:background="#c4302b"
                   android:textColor="#fff"
                   android:layout_margin="5dp"
                   android:text="Google CEO Sundar Pichai’s I/O 2017 keynote"/>
           </LinearLayout>



       </LinearLayout>
   </ScrollView>



</LinearLayout>
